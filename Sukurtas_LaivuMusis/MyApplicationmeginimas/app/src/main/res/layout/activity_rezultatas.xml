<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bomba"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sveikinimas"
        android:text="Nušovei visus laivus!"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/zaidimoRezultatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Padaryta šūvių: 0"
        android:textColor="#ffffff"
        android:textSize="23dp"
        android:layout_marginTop="60dp" />
    <TextView
        android:id="@+id/rekordas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geriausias rezultatas: 0"
        android:textColor="#ffffff"
        android:textSize="23dp"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kartojimas"
        android:layout_marginTop="60dp"
        android:text="Meginti dar karta"
        android:onClick="Kartojimas"/>


</LinearLayout>